{
  "name": "typescript-project-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate TS project",
  "engines": {
    "node": "22.14.0"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "pnpm -r exec biome format --write .",
    "biome:fix": "pnpm -r exec biome check --write .",
    "biome:fix-unsafe": "pnpm -r exec biome check --write --unsafe .",
    "check:ci": "pnpm -r exec biome ci .",
    "check:types": "pnpm -r exec tsc --noEmit",
    "check": "pnpm run '/check:.*/'"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@total-typescript/tsconfig": "1.0.4"
  }
}
